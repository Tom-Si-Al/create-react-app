{
  "name": "create-react-app",
  "version": "0.1.0",
  "homepage": "https://tom-si-al.github.io/create-react-app",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "style": "eslint . --ext .ts,.tsx",
    "style:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/enzyme": "^3.10.9",
    "@types/node": "^12.20.27",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "bootstrap": "^5.1.1",
    "enzyme": "^3.11.0",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.0-rc.0",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.4.3",
    "web-vitals": "^1.1.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-prettier": "^4.0.0",
    "gh-pages": "^3.2.3",
    "jest": "^27.2.2",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-typescript",
      "plugin:jest/recommended",
      "react-app",
      "react-app/jest",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "jest",
      "import",
      "prettier"
    ],
    "rules": {
      "no-debugger": "off",
      "no-console": 0,
      "no-plusplus": "error",
      "import/prefer-default-export": "off",
      "prettier/prettier": [
        "error"
      ],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
      ]
    },
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "ignorePatterns": [
      "**/node_modules/**",
      "./build",
      "./public"
    ]
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "arrowParens": "avoid"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
